<Application x:Class="IPS.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:IPS"
             xmlns:views="clr-namespace:IPS.MainApp.Views"
             xmlns:vm="clr-namespace:IPS.MainApp.ViewModels"
             xmlns:converters="clr-namespace:IPS.MainApp.Converters">
    <Application.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <converters:InverseStringToVisibilityConverter x:Key="InverseStringToVisibilityConverter"/>
        <converters:BoolToPaymentTextConverter x:Key="BoolToPaymentTextConverter"/>
        <converters:StringEqualityConverter x:Key="StringEqualityConverter"/>
        <converters:StringEqualityToBrushConverter x:Key="StringEqualityToBrushConverter"/>

        <!-- COFFEEBOTIC Color Palette -->
        <!-- Primary Colors from Brand -->
        <SolidColorBrush x:Key="ForestGreen" Color="#39543A"/>
        <SolidColorBrush x:Key="SageGreen" Color="#769B69"/>
        <SolidColorBrush x:Key="Espresso" Color="#442B2D"/>
        <SolidColorBrush x:Key="Latte" Color="#D8CABA"/>
        <SolidColorBrush x:Key="MetallicGold" Color="#D4AF37"/>

        <!-- Semantic Color Mappings -->
        <SolidColorBrush x:Key="PrimaryBrown" Color="#39543A"/>      <!-- Forest Green - Primary actions -->
        <SolidColorBrush x:Key="SecondaryBrown" Color="#769B69"/>    <!-- Sage Green - Secondary actions -->
        <SolidColorBrush x:Key="DarkBrown" Color="#442B2D"/>         <!-- Espresso - Text & headers -->
        <SolidColorBrush x:Key="MediumBrown" Color="#39543A"/>       <!-- Forest Green - Medium emphasis -->
        <SolidColorBrush x:Key="LightCream" Color="#F5F0E8"/>        <!-- Light warm background -->
        <SolidColorBrush x:Key="Cream" Color="#E8DDD0"/>             <!-- Darker cream for contrast -->
        <SolidColorBrush x:Key="BackgroundBeige" Color="#FAF7F2"/>   <!-- Subtle warm white -->
        <SolidColorBrush x:Key="AccentLatte" Color="#D8CABA"/>       <!-- Latte - Buttons & cards -->
        <SolidColorBrush x:Key="AccentGold" Color="#D4AF37"/>        <!-- Metallic Gold - Premium accents -->
        <SolidColorBrush x:Key="AccentGreen" Color="#769B69"/>       <!-- Sage Green - Success states -->
        <SolidColorBrush x:Key="ErrorRed" Color="#C62828"/>          <!-- Slightly darker red for better contrast -->

        <!-- Brand Typography -->
        <FontFamily x:Key="BrandFont">Segoe UI</FontFamily>
        <FontFamily x:Key="DisplayFont">Bahnschrift</FontFamily>

        <!-- Brand Header Style -->
        <Style x:Key="BrandHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource DisplayFont}"/>
            <Setter Property="FontSize" Value="72"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource LightCream}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,40,0,0"/>
        </Style>

        <!-- Custom ScrollBar Style for Touchscreen -->
        <Style x:Key="TouchScrollBarThumb" TargetType="Thumb">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border Background="{StaticResource ForestGreen}"
                                CornerRadius="8"
                                Margin="2"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TouchScrollBar" TargetType="ScrollBar">
            <Setter Property="Width" Value="24"/>
            <Setter Property="MinWidth" Value="24"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid>
                            <Border Background="#20000000"
                                    CornerRadius="12"
                                    Margin="2"/>
                            <Track x:Name="PART_Track"
                                   IsDirectionReversed="True"
                                   Grid.Row="0">
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource TouchScrollBarThumb}"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Global Button Style - No Hover Effects -->
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource MetallicGold}"/>
            <Setter Property="Foreground" Value="{StaticResource Espresso}"/>
            <Setter Property="FontFamily" Value="{StaticResource BrandFont}"/>
            <Setter Property="FontSize" Value="48"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="100,40"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="20"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource ForestGreen}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataTemplates for ViewModels -->
        <DataTemplate DataType="{x:Type vm:MainViewModel}">
            <views:MainView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:LoadingViewModel}">
            <views:LoadingView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:WelcomeViewModel}" >
            <views:WelcomeView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:MenuViewModel}">
            <views:MenuView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:AdminViewModel}">
            <views:AdminView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:PaymentViewModel}">
            <views:PaymentView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:OrderResultViewModel}">
            <views:OrderResultView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:PasswordEntryViewModel}">
            <views:PasswordEntryView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:BreakTimeViewModel}">
            <views:BreakTimeView />
        </DataTemplate>
    </Application.Resources>
</Application>
