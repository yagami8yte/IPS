<Window x:Class="MTUSDKDemo.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MTUSDKDemo"
        mc:Ignorable="d"
        Title="Settings" Height="410" Width="520" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="390"/>
        </Grid.RowDefinitions>

        <GroupBox x:Name="mqttGB" Grid.Row="1" Header=" MQTT Settings ">
            <Grid Margin="10,10,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal">
                    <Label Content="Broker URI: " Width="130" VerticalContentAlignment="Center" FontWeight="Bold"/>
                    <TextBox x:Name="BrokerURITextBox" Text="" Width="330" VerticalContentAlignment="Center" Height="21"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <Label Content="Username: " Width="130" VerticalContentAlignment="Center" FontWeight="Bold"/>
                    <TextBox x:Name="UsernameTextBox" Text="" Width="330" VerticalContentAlignment="Center" Height="21"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Orientation="Horizontal">
                    <Label Content="Password: " Width="130" VerticalContentAlignment="Center" FontWeight="Bold"/>
                    <TextBox x:Name="PasswordTextBox" Text="" Width="330" VerticalContentAlignment="Center" Height="21"/>
                </StackPanel>

                <StackPanel Grid.Row="3" Orientation="Horizontal">
                    <Label Content="Subscribe Topic: " Width="130" VerticalContentAlignment="Center" FontWeight="Bold"/>
                    <TextBox x:Name="SubscribeTopicTextBox" Text="" Width="330" VerticalContentAlignment="Center" Height="21"/>
                </StackPanel>

                <StackPanel Grid.Row="4" Orientation="Horizontal">
                    <Label Content="Publish Topic: " Width="130" VerticalContentAlignment="Center" FontWeight="Bold"/>
                    <TextBox x:Name="PublishTopicTextBox" Text="" Width="330" VerticalContentAlignment="Center" Height="21"/>
                </StackPanel>

                <StackPanel Grid.Row="5" Orientation="Horizontal">
                    <Label x:Name="ClientCertLabel" Content="Client Certificate:" VerticalContentAlignment="Center" Height="25" Width="130" FontWeight="Bold"/>
                    <TextBox x:Name="ClientCertTextBox" Text="" Width="210" VerticalContentAlignment="Center" Height="25" Margin="0,5,0,0"/>
                    <Button x:Name="ClearButton" Content="Clear" Width="50" Height="25" Margin="10,5,0,0" VerticalContentAlignment="Center" Click="ClearButton_Click"/>
                    <Button x:Name="SelectButton" Content="Select..." Width="50" Height="25" Margin="10,5,0,0" VerticalContentAlignment="Center" Click="SelectButton_Click"/>
                </StackPanel>

                <StackPanel Grid.Row="6" Orientation="Horizontal">
                    <Label Content="Certificate Password: " Width="130" VerticalContentAlignment="Center" FontWeight="Bold"/>
                    <TextBox x:Name="ClientCertPasswordTextBox" Text="" Width="330" VerticalContentAlignment="Center" Height="21"/>
                </StackPanel>

                <StackPanel Grid.Row="7" Orientation="Horizontal">
                    <Button x:Name="OKButton" Content="OK" Width="100" Height="30" Margin="150,20,0,0" IsCancel="false" Click="OKButton_Click"/>
                    <Button x:Name="CancelButton" Content="Cancel" Width="100" Height="30" Margin="20,20,0,0" IsCancel="true" Click="CancelButton_Click"/>
                </StackPanel>

            </Grid>
        </GroupBox>
    </Grid>
</Window>
