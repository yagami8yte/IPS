<Window x:Class="MTUSDKDemo.NFCTagWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MTUSDKDemo"
        mc:Ignorable="d"
        Title="NFC Type 2" Height="320" Width="520" WindowStartupLocation="CenterOwner">
    <Grid Margin="5,5,5,5">
        <Grid.RowDefinitions>
            <RowDefinition Height="270"/>
        </Grid.RowDefinitions>

        <GroupBox x:Name="nfcWriteGB" Grid.Row="1" Header=" Write / Append Operations ">
            <Grid Margin="10,10,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="125"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal">
                    <Label Content="Text Record: " VerticalContentAlignment="Center" FontWeight="Bold"/>
                    <TextBox x:Name="TextTextBox" TextWrapping="Wrap" Text="NFC Demo Test 1" Width="340" VerticalContentAlignment="Center" Height="21"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <Label Content="URI Record: " VerticalContentAlignment="Top" FontWeight="Bold" VerticalAlignment="Top"/>
                    <ComboBox x:Name="URIPrefixCB" Width="110" Height="21" VerticalAlignment="Top" Margin="0,5,0,0" />
                    <TextBox x:Name="URITextBox" TextWrapping="Wrap" Text="magtek.com" Width="234" Height="120" VerticalAlignment="Top" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Orientation="Horizontal">
                    <Button x:Name="WriteButton" Content="Write" Width="85" Height="30" Margin="80,20,0,0" Click="WriteButton_Click"/>
                    <Button x:Name="AppendButton" Content="Append" Width="85" Height="30" Margin="20,20,0,0" Click="AppendButton_Click"/>
                    <Button x:Name="CancelButton" Content="Cancel" Width="85" Height="30" Margin="20,20,0,0" IsCancel="True" Click="CancelButton_Click"/>
                </StackPanel>

            </Grid>
        </GroupBox>
    </Grid>

</Window>
