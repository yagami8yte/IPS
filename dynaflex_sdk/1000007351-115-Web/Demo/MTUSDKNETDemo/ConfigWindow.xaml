<Window x:Class="MTUSDKDemo.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MTUSDKDemo"
        mc:Ignorable="d"
        Title="Configuration" Height="400" Width="400" WindowStartupLocation="CenterOwner">

    <Grid Margin="40,10,40,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <Label Content="Action:" FontWeight="Bold"/>
            <StackPanel Margin="20,0,0,0">
                <RadioButton Name="GetConfigRB" GroupName="ConfigActionRB" Content="Get Configuration" IsChecked="True"/>
                <RadioButton Name="SetConfigRB" GroupName="ConfigActionRB" Content="Set Configuration" />
                <RadioButton Name="GetKeyInfoRB" GroupName="ConfigActionRB" Content="Get Key Information" />
                <RadioButton Name="UpdateKeyInfoRB" GroupName="ConfigActionRB" Content="Update Key Information" />
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Label Content="Type:" VerticalContentAlignment="Center" FontWeight="Bold"/>
            <TextBox x:Name="ConfigTypeTextBox" TextWrapping="Wrap" Text="02" Width="120" VerticalContentAlignment="Center" Height="21"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Vertical">
            <Label Content="Value:" VerticalContentAlignment="Center" FontWeight="Bold"/>
            <TextBox x:Name="ConfigDataTextBox" TextWrapping="Wrap" Text="E108E206E204E202C200" Margin="20,0,20,0" Height="120" VerticalScrollBarVisibility="Auto" AcceptsReturn="True"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal">
            <Button x:Name="OKButton" Content="OK" Width="100" Height="30" Margin="20,0,0,0" Click="OKButton_Click"/>
            <Button x:Name="CancelButton" Content="Cancel" Width="100" Height="30" Margin="20,0,0,0" IsCancel="True" Click="CancelButton_Click"/>
        </StackPanel>
        
    </Grid>
</Window>
