<Window x:Class="MTUSDKDemo.ClassicNFCTagWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MTUSDKDemo"
        mc:Ignorable="d"
        Title="Mifare Classic NFC" Height="500" Width="400" WindowStartupLocation="CenterOwner">
    <Grid Margin="5,5,5,5">
        <Grid.RowDefinitions>
            <RowDefinition Height="450"/>
        </Grid.RowDefinitions>

        <GroupBox x:Name="nfcWriteGB" Grid.Row="1" Header=" Write Operation">
            <Grid Margin="10,10,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="300"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" >
                    <Label Content="Sector: " VerticalContentAlignment="Top" FontWeight="Bold" VerticalAlignment="Top" Margin="0,10,0,0" />
                    <ComboBox x:Name="SectorCB" Width="70" Height="21" VerticalAlignment="Top" Margin="0,15,0,0" SelectionChanged="SectorCB_SelectionChanged" />
                </StackPanel>

                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <TextBox x:Name="BlockTextBox" FontWeight="Bold" AcceptsReturn="True" Text="" Width="70" Height="270" VerticalAlignment="Top" Margin="0,5,0,0" FontFamily="Courier New" IsReadOnly="True" Focusable="False" BorderBrush="{x:Null}"/>
                    <TextBox x:Name="DataTextBox" AcceptsReturn="True" Text="" Width="250" Height="270" MaxLines="4"  VerticalAlignment="Top" Margin="5,5,0,0" FontFamily="Courier New"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Orientation="Horizontal">
                    <Button x:Name="WriteButton" Content="Write Sector" Width="100" Height="30" Margin="80,20,0,0" Click="WriteButton_Click"/>
                    <Button x:Name="CancelButton" Content="Cancel" Width="100" Height="30" Margin="20,20,0,0" IsCancel="True" Click="CancelButton_Click"/>
                </StackPanel>

            </Grid>
        </GroupBox>
    </Grid>

</Window>
