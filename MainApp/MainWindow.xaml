<Window x:Class="IPS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IPS"
        mc:Ignorable="d"
        xmlns:vm="clr-namespace:IPS.MainApp.ViewModels"
        Title="IPS Kiosk"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        d:Height="1920" d:Width="1080"
        d:DataContext="{d:DesignInstance vm:MainViewModel}"
        >
    <!-- Viewbox scales content to fit screen while maintaining aspect ratio -->
    <Viewbox Stretch="Uniform">
        <Grid Width="1080" Height="1920">
            <ContentControl Content="{Binding}" />
        </Grid>
    </Viewbox>
</Window>
