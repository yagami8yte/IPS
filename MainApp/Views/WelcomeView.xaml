<UserControl x:Class="IPS.MainApp.Views.WelcomeView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:IPS.MainApp.Views"
      xmlns:vm="clr-namespace:IPS.MainApp.ViewModels"
      mc:Ignorable="d"
      d:DataContext="{d:DesignInstance vm:WelcomeViewModel}"
      d:DesignHeight="1920" d:DesignWidth="1080"
      Width="1080" Height="1920">

    <Grid>
        <!-- Coffee-themed gradient background -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#3E2723" Offset="0"/>
                <GradientStop Color="#6F4E37" Offset="0.5"/>
                <GradientStop Color="#4E342E" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Main Content -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="180"/>
                <!-- Brand Header -->
                <RowDefinition Height="*"/>
                <!-- Video Content -->
                <RowDefinition Height="300"/>
                <!-- Button Label Area -->
            </Grid.RowDefinitions>

            <!-- Brand Name at Top -->
            <Border Grid.Row="0"
                    Background="#50000000"
                    BorderBrush="{StaticResource AccentGold}"
                    BorderThickness="0,0,0,2">
                <Grid>
                    <TextBlock Text="Coffeebotic"
                               Style="{StaticResource BrandHeaderStyle}"/>

                    <!-- Admin Button (Top-Right) -->
                    <Button Command="{Binding OpenAdminCommand}"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,40,0"
                            Width="120"
                            Height="120"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Opacity="0.6">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="15">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Opacity" Value="1.0"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <!-- Gear/Settings Icon -->
                        <Viewbox Width="70" Height="70">
                            <Canvas Width="24" Height="24">
                                <!-- Settings gear icon path -->
                                <Path Fill="{StaticResource AccentGold}"
                                      Data="M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.34 19.43,11L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.96 19.05,5.05L16.56,6.05C16.04,5.66 15.5,5.32 14.87,5.07L14.5,2.42C14.46,2.18 14.25,2 14,2H10C9.75,2 9.54,2.18 9.5,2.42L9.13,5.07C8.5,5.32 7.96,5.66 7.44,6.05L4.95,5.05C4.73,4.96 4.46,5.05 4.34,5.27L2.34,8.73C2.21,8.95 2.27,9.22 2.46,9.37L4.57,11C4.53,11.34 4.5,11.67 4.5,12C4.5,12.33 4.53,12.65 4.57,12.97L2.46,14.63C2.27,14.78 2.21,15.05 2.34,15.27L4.34,18.73C4.46,18.95 4.73,19.03 4.95,18.95L7.44,17.94C7.96,18.34 8.5,18.68 9.13,18.93L9.5,21.58C9.54,21.82 9.75,22 10,22H14C14.25,22 14.46,21.82 14.5,21.58L14.87,18.93C15.5,18.67 16.04,18.34 16.56,17.94L19.05,18.95C19.27,19.03 19.54,18.95 19.66,18.73L21.66,15.27C21.78,15.05 21.73,14.78 21.54,14.63L19.43,12.97Z"/>
                            </Canvas>
                        </Viewbox>
                    </Button>
                </Grid>
            </Border>

            <!-- Full-screen Tap to Start Button (covering video and button area) -->
            <Button Grid.Row="1" Grid.RowSpan="2"
                    Command="{Binding StartOrderCommand}"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"
                    Content="">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderThickness="{TemplateBinding BorderThickness}">
                                        <ContentPresenter/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Video Advertisement -->
            <Grid Grid.Row="1" Margin="60,80,60,60" IsHitTestVisible="False">
                <Border CornerRadius="30"
                        Background="#30000000"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                    <Border.Effect>
                        <DropShadowEffect Color="Black"
                                        Direction="270"
                                        ShadowDepth="10"
                                        Opacity="0.5"
                                        BlurRadius="30"/>
                    </Border.Effect>

                    <!-- Video Player Container -->
                    <Border CornerRadius="27" Margin="3" ClipToBounds="True">
                        <MediaElement x:Name="VideoPlayer"
                                      Source="{Binding AdVideoPath}"
                                      LoadedBehavior="Manual"
                                      UnloadedBehavior="Manual"
                                      Stretch="Uniform"
                                      MediaEnded="VideoPlayer_MediaEnded"
                                      Volume="0.7"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                    </Border>
                </Border>

                <!-- Border overlay to ensure corners are covered -->
                <Border CornerRadius="30"
                        BorderBrush="{StaticResource AccentLatte}"
                        BorderThickness="3"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        IsHitTestVisible="False"/>

                <!-- Placeholder when no video -->
                <Border CornerRadius="30"
                        Background="#20FFFFFF"
                        x:Name="PlaceholderBorder"
                        Visibility="Collapsed">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Path Data="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M12,4A8,8 0 0,1 20,12A8,8 0 0,1 12,20A8,8 0 0,1 4,12A8,8 0 0,1 12,4M12,5.5A6.5,6.5 0 0,0 5.5,12A6.5,6.5 0 0,0 12,18.5A6.5,6.5 0 0,0 18.5,12A6.5,6.5 0 0,0 12,5.5M12,7A5,5 0 0,1 17,12A5,5 0 0,1 12,17A5,5 0 0,1 7,12A5,5 0 0,1 12,7M10.5,8.67V15.33L15.25,12L10.5,8.67Z"
                              Fill="{StaticResource LightCream}"
                              Width="120" Height="120"
                              Stretch="Uniform"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                        <TextBlock Text="Advertisement"
                                   FontSize="36"
                                   FontFamily="{StaticResource BrandFont}"
                                   Foreground="{StaticResource LightCream}"
                                   HorizontalAlignment="Center"
                                   Margin="0,30,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Start Button Label -->
            <Grid Grid.Row="2" VerticalAlignment="Center" IsHitTestVisible="False">
                <TextBlock Text="TAP TO START"
                           FontSize="56"
                           FontWeight="Bold"
                           FontFamily="{StaticResource BrandFont}"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Black"
                                        Direction="270"
                                        ShadowDepth="3"
                                        Opacity="0.6"
                                        BlurRadius="8"/>
                    </TextBlock.Effect>
                </TextBlock>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
