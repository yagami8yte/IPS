<UserControl x:Class="IPS.MainApp.Views.Controls.MenuItemCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Width="245" Height="270">
    <Border CornerRadius="15"
            Background="White"
            BorderBrush="{StaticResource AccentLatte}"
            BorderThickness="2"
            Margin="5"
            Cursor="Hand">
        <Border.Effect>
            <DropShadowEffect Color="Black"
                            Direction="270"
                            ShadowDepth="3"
                            Opacity="0.2"
                            BlurRadius="10"/>
        </Border.Effect>


        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="175"/>
                <!-- Image -->
                <RowDefinition Height="*"/>
                <!-- Content -->
            </Grid.RowDefinitions>

            <!-- Menu Image -->
            <Grid Grid.Row="0">
                <Border CornerRadius="15,15,0,0" ClipToBounds="True" Padding="10">
                    <Image Source="{Binding Image}"
                           Stretch="Uniform"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                </Border>

                <!-- Border overlay to ensure corners are covered -->
                <Border CornerRadius="15,15,0,0"
                        BorderBrush="{StaticResource AccentLatte}"
                        BorderThickness="2"
                        IsHitTestVisible="False"/>

                <!-- Unavailable Overlay -->
                <Grid>
                    <Border Background="#CC442B2D">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsAvailable}" Value="False">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="SOLD OUT"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Grid>

            <!-- Menu Details -->
            <StackPanel Grid.Row="1" Margin="12,10" VerticalAlignment="Center">
                <TextBlock Text="{Binding DisplayName}"
                           FontSize="20"
                           FontWeight="SemiBold"
                           FontFamily="{StaticResource BrandFont}"
                           Foreground="{StaticResource DarkBrown}"
                           TextTrimming="CharacterEllipsis"
                           TextAlignment="Center"
                           Margin="0,0,0,8"/>

                <TextBlock Text="{Binding Price, StringFormat='{}{0:C}'}"
                           FontSize="24"
                           FontWeight="Bold"
                           FontFamily="{StaticResource BrandFont}"
                           Foreground="{StaticResource PrimaryBrown}"
                           TextAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
