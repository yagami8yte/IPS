<UserControl x:Class="IPS.MainApp.Views.PaymentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             mc:Ignorable="d"
             d:DesignHeight="1920" d:DesignWidth="1080">
    <UserControl.Resources>
        <!-- Button style without hover effects -->
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid Background="{StaticResource BackgroundBeige}">
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Content -->
            <RowDefinition Height="200"/>
            <!-- Total and Buttons -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{StaticResource PrimaryBrown}"
                Padding="40,20">
            <TextBlock Text="Payment"
                       FontSize="48"
                       FontWeight="Bold"
                       FontFamily="{StaticResource BrandFont}"
                       Foreground="White"
                       VerticalAlignment="Center"/>
        </Border>

        <!-- Content: Payment WebView Only -->
        <Grid Grid.Row="1">
            <!-- Full-screen Loading Overlay (when loading checkout) -->
            <Border Background="{StaticResource BackgroundBeige}"
                    Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Panel.ZIndex="100">
                <StackPanel VerticalAlignment="Center"
                           HorizontalAlignment="Center">

                    <!-- Multi-ring spinner with pulse effect -->
                    <Grid Width="150" Height="150" Margin="0,0,0,40">
                        <!-- Outer pulsing ring -->
                        <Ellipse Width="150" Height="150"
                                Stroke="{StaticResource ForestGreen}"
                                StrokeThickness="3"
                                Opacity="0.2"
                                RenderTransformOrigin="0.5,0.5">
                            <Ellipse.RenderTransform>
                                <ScaleTransform x:Name="OuterPulseScale" ScaleX="1" ScaleY="1"/>
                            </Ellipse.RenderTransform>
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetName="OuterPulseScale"
                                                           Storyboard.TargetProperty="ScaleX"
                                                           From="0.8" To="1.1"
                                                           Duration="0:0:1.5"
                                                           AutoReverse="True"/>
                                            <DoubleAnimation Storyboard.TargetName="OuterPulseScale"
                                                           Storyboard.TargetProperty="ScaleY"
                                                           From="0.8" To="1.1"
                                                           Duration="0:0:1.5"
                                                           AutoReverse="True"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>

                        <!-- Middle rotating ring -->
                        <Ellipse Width="120" Height="120"
                                Stroke="{StaticResource ForestGreen}"
                                StrokeThickness="6"
                                StrokeDashArray="40,20"
                                Opacity="0.5"
                                RenderTransformOrigin="0.5,0.5">
                            <Ellipse.RenderTransform>
                                <RotateTransform x:Name="MiddleRingRotation" Angle="0"/>
                            </Ellipse.RenderTransform>
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetName="MiddleRingRotation"
                                                           Storyboard.TargetProperty="Angle"
                                                           From="360" To="0"
                                                           Duration="0:0:3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>

                        <!-- Inner fast rotating ring -->
                        <Ellipse Width="90" Height="90"
                                Stroke="{StaticResource ForestGreen}"
                                StrokeThickness="8"
                                StrokeDashArray="60,30"
                                RenderTransformOrigin="0.5,0.5">
                            <Ellipse.RenderTransform>
                                <RotateTransform x:Name="InnerRingRotation" Angle="0"/>
                            </Ellipse.RenderTransform>
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetName="InnerRingRotation"
                                                           Storyboard.TargetProperty="Angle"
                                                           From="0" To="360"
                                                           Duration="0:0:1.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>

                        <!-- Center pulsing dot -->
                        <Ellipse Width="20" Height="20"
                                Fill="{StaticResource ForestGreen}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                RenderTransformOrigin="0.5,0.5">
                            <Ellipse.RenderTransform>
                                <ScaleTransform x:Name="CenterDotScale" ScaleX="1" ScaleY="1"/>
                            </Ellipse.RenderTransform>
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetName="CenterDotScale"
                                                           Storyboard.TargetProperty="ScaleX"
                                                           From="0.6" To="1.4"
                                                           Duration="0:0:0.8"
                                                           AutoReverse="True"/>
                                            <DoubleAnimation Storyboard.TargetName="CenterDotScale"
                                                           Storyboard.TargetProperty="ScaleY"
                                                           From="0.6" To="1.4"
                                                           Duration="0:0:0.8"
                                                           AutoReverse="True"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>
                    </Grid>

                    <!-- Main text with subtle pulse -->
                    <TextBlock Text="Preparing Payment"
                              FontSize="38"
                              FontWeight="SemiBold"
                              FontFamily="{StaticResource BrandFont}"
                              Foreground="{StaticResource DarkBrown}"
                              HorizontalAlignment="Center"
                              RenderTransformOrigin="0.5,0.5">
                        <TextBlock.RenderTransform>
                            <ScaleTransform x:Name="MainTextScale" ScaleX="1" ScaleY="1"/>
                        </TextBlock.RenderTransform>
                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetName="MainTextScale"
                                                       Storyboard.TargetProperty="ScaleX"
                                                       From="1" To="1.03"
                                                       Duration="0:0:1.5"
                                                       AutoReverse="True"/>
                                        <DoubleAnimation Storyboard.TargetName="MainTextScale"
                                                       Storyboard.TargetProperty="ScaleY"
                                                       From="1" To="1.03"
                                                       Duration="0:0:1.5"
                                                       AutoReverse="True"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>

                    <!-- Bouncing dots -->
                    <StackPanel Orientation="Horizontal"
                               HorizontalAlignment="Center"
                               Margin="0,20,0,0">
                        <Ellipse x:Name="Dot1" Width="12" Height="12"
                                Fill="{StaticResource ForestGreen}"
                                Margin="5,0"
                                RenderTransformOrigin="0.5,0.5">
                            <Ellipse.RenderTransform>
                                <TranslateTransform x:Name="Dot1Translate" Y="0"/>
                            </Ellipse.RenderTransform>
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Dot1Translate"
                                                                          Storyboard.TargetProperty="Y">
                                                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                                                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="-15">
                                                    <EasingDoubleKeyFrame.EasingFunction>
                                                        <QuadraticEase EasingMode="EaseOut"/>
                                                    </EasingDoubleKeyFrame.EasingFunction>
                                                </EasingDoubleKeyFrame>
                                                <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="0">
                                                    <EasingDoubleKeyFrame.EasingFunction>
                                                        <BounceEase EasingMode="EaseOut" Bounces="2" Bounciness="3"/>
                                                    </EasingDoubleKeyFrame.EasingFunction>
                                                </EasingDoubleKeyFrame>
                                                <EasingDoubleKeyFrame KeyTime="0:0:1.2" Value="0"/>
                                            </DoubleAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>

                        <Ellipse x:Name="Dot2" Width="12" Height="12"
                                Fill="{StaticResource ForestGreen}"
                                Margin="5,0"
                                RenderTransformOrigin="0.5,0.5">
                            <Ellipse.RenderTransform>
                                <TranslateTransform x:Name="Dot2Translate" Y="0"/>
                            </Ellipse.RenderTransform>
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever" BeginTime="0:0:0.15">
                                            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Dot2Translate"
                                                                          Storyboard.TargetProperty="Y">
                                                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                                                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="-15">
                                                    <EasingDoubleKeyFrame.EasingFunction>
                                                        <QuadraticEase EasingMode="EaseOut"/>
                                                    </EasingDoubleKeyFrame.EasingFunction>
                                                </EasingDoubleKeyFrame>
                                                <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="0">
                                                    <EasingDoubleKeyFrame.EasingFunction>
                                                        <BounceEase EasingMode="EaseOut" Bounces="2" Bounciness="3"/>
                                                    </EasingDoubleKeyFrame.EasingFunction>
                                                </EasingDoubleKeyFrame>
                                                <EasingDoubleKeyFrame KeyTime="0:0:1.2" Value="0"/>
                                            </DoubleAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>

                        <Ellipse x:Name="Dot3" Width="12" Height="12"
                                Fill="{StaticResource ForestGreen}"
                                Margin="5,0"
                                RenderTransformOrigin="0.5,0.5">
                            <Ellipse.RenderTransform>
                                <TranslateTransform x:Name="Dot3Translate" Y="0"/>
                            </Ellipse.RenderTransform>
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever" BeginTime="0:0:0.3">
                                            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Dot3Translate"
                                                                          Storyboard.TargetProperty="Y">
                                                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                                                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="-15">
                                                    <EasingDoubleKeyFrame.EasingFunction>
                                                        <QuadraticEase EasingMode="EaseOut"/>
                                                    </EasingDoubleKeyFrame.EasingFunction>
                                                </EasingDoubleKeyFrame>
                                                <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="0">
                                                    <EasingDoubleKeyFrame.EasingFunction>
                                                        <BounceEase EasingMode="EaseOut" Bounces="2" Bounciness="3"/>
                                                    </EasingDoubleKeyFrame.EasingFunction>
                                                </EasingDoubleKeyFrame>
                                                <EasingDoubleKeyFrame KeyTime="0:0:1.2" Value="0"/>
                                            </DoubleAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>
                    </StackPanel>

                    <!-- Subtitle with fade animation -->
                    <TextBlock Text="Connecting to payment terminal"
                              FontSize="22"
                              Foreground="{StaticResource MediumBrown}"
                              HorizontalAlignment="Center"
                              Margin="0,25,0,0">
                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                       From="0.5" To="1"
                                                       Duration="0:0:1"
                                                       AutoReverse="True"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- Payment WebView (Checkout v2 Mode) -->
            <Border Background="White"
                    Padding="20"
                    Visibility="{Binding IsCheckoutMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Border Background="White"
                        CornerRadius="10"
                        BorderBrush="{StaticResource ForestGreen}"
                        BorderThickness="2">
                    <!-- WebView2 - Full Height -->
                    <wv2:WebView2 x:Name="ForteCheckoutWebView"
                                  Loaded="ForteCheckoutWebView_Loaded"/>
                </Border>
            </Border>

            <!-- REST API Mode - Card Reader Screens -->
            <Border Background="{StaticResource BackgroundBeige}"
                    Visibility="{Binding IsRestApiMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid>
                    <!-- Screen 1: Connecting to Card Reader (production mode only) -->
                    <Border Background="{StaticResource BackgroundBeige}"
                            Visibility="{Binding IsConnectingToCardReader, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <!-- Card Reader Icon with Pulse Animation -->
                            <Grid Width="200" Height="200" Margin="0,0,0,40">
                                <!-- Pulsing outer ring -->
                                <Ellipse Width="200" Height="200"
                                         Stroke="{StaticResource ForestGreen}"
                                         StrokeThickness="4"
                                         Opacity="0.3"
                                         RenderTransformOrigin="0.5,0.5">
                                    <Ellipse.RenderTransform>
                                        <ScaleTransform x:Name="ConnectPulse" ScaleX="1" ScaleY="1"/>
                                    </Ellipse.RenderTransform>
                                    <Ellipse.Triggers>
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard>
                                                <Storyboard RepeatBehavior="Forever">
                                                    <DoubleAnimation Storyboard.TargetName="ConnectPulse"
                                                                     Storyboard.TargetProperty="ScaleX"
                                                                     From="0.8" To="1.2"
                                                                     Duration="0:0:1.2"
                                                                     AutoReverse="True"/>
                                                    <DoubleAnimation Storyboard.TargetName="ConnectPulse"
                                                                     Storyboard.TargetProperty="ScaleY"
                                                                     From="0.8" To="1.2"
                                                                     Duration="0:0:1.2"
                                                                     AutoReverse="True"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Ellipse.Triggers>
                                </Ellipse>

                                <!-- Card reader icon background -->
                                <Border Background="{StaticResource PrimaryBrown}"
                                        CornerRadius="20"
                                        Width="140" Height="140"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                    <TextBlock Text="ðŸ”Œ" FontSize="60" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <!-- Spinning connection indicator -->
                                <Ellipse Width="180" Height="180"
                                         Stroke="{StaticResource ForestGreen}"
                                         StrokeThickness="6"
                                         StrokeDashArray="15,10"
                                         RenderTransformOrigin="0.5,0.5">
                                    <Ellipse.RenderTransform>
                                        <RotateTransform x:Name="ConnectSpinner" Angle="0"/>
                                    </Ellipse.RenderTransform>
                                    <Ellipse.Triggers>
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard>
                                                <Storyboard RepeatBehavior="Forever">
                                                    <DoubleAnimation Storyboard.TargetName="ConnectSpinner"
                                                                     Storyboard.TargetProperty="Angle"
                                                                     From="0" To="360"
                                                                     Duration="0:0:2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Ellipse.Triggers>
                                </Ellipse>
                            </Grid>

                            <!-- Title -->
                            <TextBlock Text="Connecting to Card Reader"
                                       FontSize="42"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource DarkBrown}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,15"/>

                            <!-- Status message -->
                            <TextBlock Text="{Binding DynaflexStatus}"
                                       FontSize="24"
                                       Foreground="{StaticResource MediumBrown}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,30"/>

                            <!-- Info text -->
                            <TextBlock Text="Please ensure the card reader is connected via USB"
                                       FontSize="18"
                                       Foreground="{StaticResource MediumBrown}"
                                       HorizontalAlignment="Center"
                                       Opacity="0.7"/>
                        </StackPanel>
                    </Border>

                    <!-- Screen 2: Preparing Terminal (after connection, before ready for card) -->
                    <Border Background="{StaticResource BackgroundBeige}"
                            Visibility="{Binding IsPreparingTerminal, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <!-- Terminal Icon with Check Animation -->
                            <Grid Width="200" Height="200" Margin="0,0,0,40">
                                <!-- Background circle -->
                                <Ellipse Width="180" Height="180"
                                         Fill="{StaticResource SageGreen}"
                                         Opacity="0.3"/>

                                <!-- Terminal icon -->
                                <Border Background="{StaticResource ForestGreen}"
                                        CornerRadius="20"
                                        Width="140" Height="140"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                    <TextBlock Text="ðŸ’³" FontSize="60" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <!-- Spinning progress ring -->
                                <Ellipse Width="190" Height="190"
                                         Stroke="{StaticResource ForestGreen}"
                                         StrokeThickness="6"
                                         StrokeDashArray="20,15"
                                         RenderTransformOrigin="0.5,0.5">
                                    <Ellipse.RenderTransform>
                                        <RotateTransform x:Name="PrepareSpinner" Angle="0"/>
                                    </Ellipse.RenderTransform>
                                    <Ellipse.Triggers>
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard>
                                                <Storyboard RepeatBehavior="Forever">
                                                    <DoubleAnimation Storyboard.TargetName="PrepareSpinner"
                                                                     Storyboard.TargetProperty="Angle"
                                                                     From="0" To="360"
                                                                     Duration="0:0:1.5"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Ellipse.Triggers>
                                </Ellipse>
                            </Grid>

                            <!-- Title -->
                            <TextBlock Text="Preparing Terminal"
                                       FontSize="42"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource DarkBrown}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,15"/>

                            <!-- Status message -->
                            <TextBlock Text="{Binding DynaflexStatus}"
                                       FontSize="24"
                                       Foreground="{StaticResource MediumBrown}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,30"/>

                            <!-- Info text with animation -->
                            <TextBlock FontSize="20"
                                       Foreground="{StaticResource ForestGreen}"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Center">
                                <TextBlock.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                 From="0.5" To="1"
                                                                 Duration="0:0:0.8"
                                                                 AutoReverse="True"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </TextBlock.Triggers>
                                Please wait - do not insert card yet
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Screen 3: Connection Failed (with retry button) -->
                    <Border Background="{StaticResource BackgroundBeige}"
                            Visibility="{Binding CardReaderConnectionFailed, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <!-- Error icon -->
                            <Border Background="#E74C3C"
                                    CornerRadius="75"
                                    Width="150" Height="150"
                                    Margin="0,0,0,40">
                                <TextBlock Text="âŒ" FontSize="70" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>

                            <!-- Title -->
                            <TextBlock Text="Card Reader Not Found"
                                       FontSize="42"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource DarkBrown}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,15"/>

                            <!-- Status message -->
                            <TextBlock Text="{Binding DynaflexStatus}"
                                       FontSize="22"
                                       Foreground="#E74C3C"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,20"/>

                            <!-- Instructions -->
                            <TextBlock Text="Please check:"
                                       FontSize="20"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource MediumBrown}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>
                            <StackPanel HorizontalAlignment="Center" Margin="0,0,0,40">
                                <TextBlock Text="â€¢ Card reader is connected via USB" FontSize="18" Foreground="{StaticResource MediumBrown}"/>
                                <TextBlock Text="â€¢ USB cable is properly seated" FontSize="18" Foreground="{StaticResource MediumBrown}"/>
                                <TextBlock Text="â€¢ Card reader power light is on" FontSize="18" Foreground="{StaticResource MediumBrown}"/>
                            </StackPanel>

                            <!-- Retry button -->
                            <Button Padding="50,20"
                                    FontSize="24"
                                    FontWeight="Bold"
                                    Background="{StaticResource ForestGreen}"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Command="{Binding RetryCardReaderConnectionCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ”„" FontSize="28" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                    <TextBlock Text="Try Again" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Border>

                    <!-- Screen 3: Insert Card Screen (shown when card reader connected and waiting for card) -->
                    <Border Background="{StaticResource BackgroundBeige}"
                            Visibility="{Binding IsWaitingForCard, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <!-- Card Terminal Icon with Animation -->
                            <Grid Width="300" Height="300" Margin="0,0,0,40">
                                <!-- Terminal Base -->
                                <Border Background="{StaticResource PrimaryBrown}"
                                        CornerRadius="20"
                                        Width="200" Height="280"
                                        VerticalAlignment="Bottom"
                                        HorizontalAlignment="Center">
                                    <!-- Screen area -->
                                    <Border Background="{StaticResource ForestGreen}"
                                            CornerRadius="10"
                                            Width="160" Height="100"
                                            Margin="0,30,0,0"
                                            VerticalAlignment="Top">
                                        <TextBlock Text="READY"
                                                   FontSize="24"
                                                   FontWeight="Bold"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                </Border>

                                <!-- Animated Card -->
                                <Border x:Name="AnimatedCard"
                                        Background="{StaticResource MetallicGold}"
                                        CornerRadius="10"
                                        Width="120" Height="80"
                                        HorizontalAlignment="Center"
                                        RenderTransformOrigin="0.5,0.5">
                                    <Border.RenderTransform>
                                        <TranslateTransform x:Name="CardTranslate" Y="-100"/>
                                    </Border.RenderTransform>
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Text="ðŸ’³" FontSize="30" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                    <Border.Triggers>
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard>
                                                <Storyboard RepeatBehavior="Forever">
                                                    <DoubleAnimation Storyboard.TargetName="CardTranslate"
                                                                     Storyboard.TargetProperty="Y"
                                                                     From="-100" To="20"
                                                                     Duration="0:0:1.5"
                                                                     AutoReverse="True">
                                                        <DoubleAnimation.EasingFunction>
                                                            <SineEase EasingMode="EaseInOut"/>
                                                        </DoubleAnimation.EasingFunction>
                                                    </DoubleAnimation>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Border.Triggers>
                                </Border>
                            </Grid>

                            <!-- Instruction Text -->
                            <TextBlock Text="Insert or Tap Card"
                                       FontSize="42"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource DarkBrown}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,15"/>
                            <TextBlock Text="Please insert, tap, or swipe your card on the terminal"
                                       FontSize="22"
                                       Foreground="{StaticResource MediumBrown}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,20"/>

                            <!-- Card Reader Status (shown in both sandbox and production mode) -->
                            <Border Background="{StaticResource SageGreen}"
                                    CornerRadius="10"
                                    Padding="20,12"
                                    Margin="0,0,0,30"
                                    HorizontalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <!-- Status indicator dot -->
                                    <Ellipse Width="16" Height="16" Margin="0,0,12,0" VerticalAlignment="Center">
                                        <Ellipse.Style>
                                            <Style TargetType="Ellipse">
                                                <Setter Property="Fill" Value="#F39C12"/>
                                                <!-- Orange for test mode without reader -->
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsDynaflexConnected}" Value="True">
                                                        <Setter Property="Fill" Value="#27AE60"/>
                                                        <!-- Green when connected -->
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Ellipse.Style>
                                    </Ellipse>
                                    <TextBlock Text="{Binding CardReaderStatusText}"
                                               FontSize="18"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource DarkBrown}"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Total Amount -->
                            <Border Background="{StaticResource ForestGreen}"
                                    CornerRadius="15"
                                    Padding="40,20"
                                    Margin="0,0,0,50">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="Total: "
                                               FontSize="36"
                                               FontWeight="SemiBold"
                                               Foreground="White"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding CartTotalPrice, StringFormat={}${0:F2}}"
                                               FontSize="48"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Sandbox Test Card Buttons (only shown in sandbox mode) -->
                            <Border Background="{StaticResource SageGreen}"
                                    CornerRadius="15"
                                    Padding="30"
                                    Visibility="{Binding IsSandboxMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <StackPanel>
                                    <TextBlock Text="ðŸ§ª SANDBOX MODE - Simulate Card Insert"
                                               FontSize="22"
                                               FontWeight="Bold"
                                               Foreground="{StaticResource DarkBrown}"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,20"/>
                                    <WrapPanel HorizontalAlignment="Center">
                                        <Button Padding="30,20"
                                                Margin="10"
                                                FontSize="20"
                                                FontWeight="Bold"
                                                Background="{StaticResource MetallicGold}"
                                                Foreground="{StaticResource Espresso}"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                Command="{Binding InsertTestVisaCommand}">
                                            <StackPanel>
                                                <TextBlock Text="ðŸ’³ VISA" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                                                <TextBlock Text="****1111" FontSize="16" HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Button>
                                        <Button Padding="30,20"
                                                Margin="10"
                                                FontSize="20"
                                                FontWeight="Bold"
                                                Background="{StaticResource MetallicGold}"
                                                Foreground="{StaticResource Espresso}"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                Command="{Binding InsertTestMastercardCommand}">
                                            <StackPanel>
                                                <TextBlock Text="ðŸ’³ MC" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                                                <TextBlock Text="****5454" FontSize="16" HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Button>
                                        <Button Padding="30,20"
                                                Margin="10"
                                                FontSize="20"
                                                FontWeight="Bold"
                                                Background="{StaticResource MetallicGold}"
                                                Foreground="{StaticResource Espresso}"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                Command="{Binding InsertTestAmexCommand}">
                                            <StackPanel>
                                                <TextBlock Text="ðŸ’³ AMEX" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                                                <TextBlock Text="****0002" FontSize="16" HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Button>
                                    </WrapPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Processing Screen (shown when processing payment) -->
                    <Border Background="{StaticResource BackgroundBeige}"
                            Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" MaxWidth="700">
                            <!-- Processing Animation -->
                            <Grid Width="150" Height="150" Margin="0,0,0,40">
                                <!-- Spinning ring -->
                                <Ellipse Width="120" Height="120"
                                         Stroke="{StaticResource ForestGreen}"
                                         StrokeThickness="8"
                                         StrokeDashArray="30,20"
                                         RenderTransformOrigin="0.5,0.5">
                                    <Ellipse.RenderTransform>
                                        <RotateTransform x:Name="ProcessingRotation" Angle="0"/>
                                    </Ellipse.RenderTransform>
                                    <Ellipse.Triggers>
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard>
                                                <Storyboard RepeatBehavior="Forever">
                                                    <DoubleAnimation Storyboard.TargetName="ProcessingRotation"
                                                                     Storyboard.TargetProperty="Angle"
                                                                     From="0" To="360"
                                                                     Duration="0:0:1.5"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Ellipse.Triggers>
                                </Ellipse>
                                <!-- Center icon -->
                                <TextBlock Text="ðŸ’³" FontSize="50" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>

                            <TextBlock Text="Processing Payment..."
                                       FontSize="36"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource DarkBrown}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,15"/>
                            <TextBlock Text="{Binding PaymentStatusMessage}"
                                       FontSize="22"
                                       Foreground="{StaticResource MediumBrown}"
                                       HorizontalAlignment="Center"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,40"/>

                            <!-- REST API Logs -->
                            <Border Background="White"
                                    CornerRadius="10"
                                    BorderBrush="{StaticResource SageGreen}"
                                    BorderThickness="2"
                                    Padding="15"
                                    MaxHeight="350"
                                    Visibility="{Binding HasRestApiLogs, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <StackPanel>
                                    <Grid Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="API Logs"
                                                   Grid.Column="0"
                                                   FontSize="16"
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource DarkBrown}"
                                                   VerticalAlignment="Center"/>
                                        <Button Grid.Column="1"
                                                Content="Copy to Clipboard"
                                                Padding="15,8"
                                                FontSize="14"
                                                Background="{StaticResource SageGreen}"
                                                Foreground="{StaticResource DarkBrown}"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                Click="CopyLogsToClipboard_Click"/>
                                    </Grid>
                                    <ScrollViewer MaxHeight="280" VerticalScrollBarVisibility="Auto">
                                        <ItemsControl ItemsSource="{Binding RestApiLogs}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding}"
                                                               FontSize="12"
                                                               FontFamily="Consolas"
                                                               Foreground="{StaticResource MediumBrown}"
                                                               TextWrapping="Wrap"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Total and Buttons -->
        <Border Grid.Row="2"
                Background="White"
                BorderBrush="{StaticResource AccentLatte}"
                BorderThickness="0,2,0,0"
                Padding="40,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Total -->
                <StackPanel Grid.Column="0"
                            VerticalAlignment="Center">
                    <TextBlock Text="Total Amount"
                               FontSize="24"
                               Foreground="{StaticResource MediumBrown}"/>
                    <TextBlock Text="{Binding CartTotalPrice, StringFormat={}{0:C}}"
                               FontSize="48"
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBrown}"/>
                </StackPanel>

                <!-- Cancel Button -->
                <Button Grid.Column="1"
                        Content="Cancel"
                        Width="200"
                        Height="80"
                        FontSize="24"
                        FontWeight="SemiBold"
                        Background="{StaticResource SecondaryBrown}"
                        Foreground="White"
                        BorderThickness="0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        Command="{Binding GoBackCommand}"/>

                <!-- Status Message -->
                <TextBlock Grid.Column="2"
                           Text="{Binding PaymentStatusMessage}"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource DarkBrown}"
                           VerticalAlignment="Center"
                           TextWrapping="Wrap"
                           MaxWidth="280"
                           Margin="20,0,0,0"
                           TextAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
