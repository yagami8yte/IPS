<UserControl x:Class="IPS.MainApp.Views.PaymentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             mc:Ignorable="d"
             d:DesignHeight="1920" d:DesignWidth="1080">
    <UserControl.Resources>
        <!-- Button style without hover effects -->
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid Background="{StaticResource BackgroundBeige}">
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Content -->
            <RowDefinition Height="200"/>
            <!-- Total and Buttons -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{StaticResource PrimaryBrown}"
                Padding="40,20">
            <TextBlock Text="Payment"
                       FontSize="48"
                       FontWeight="Bold"
                       FontFamily="{StaticResource BrandFont}"
                       Foreground="White"
                       VerticalAlignment="Center"/>
        </Border>

        <!-- Content: Payment WebView Only -->
        <Grid Grid.Row="1">
            <!-- Full-screen Loading Overlay (when loading checkout) -->
            <Border Background="{StaticResource BackgroundBeige}"
                    Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Panel.ZIndex="100">
                <StackPanel VerticalAlignment="Center"
                           HorizontalAlignment="Center">

                    <!-- Multi-ring spinner with pulse effect -->
                    <Grid Width="150" Height="150" Margin="0,0,0,40">
                        <!-- Outer pulsing ring -->
                        <Ellipse Width="150" Height="150"
                                Stroke="{StaticResource ForestGreen}"
                                StrokeThickness="3"
                                Opacity="0.2"
                                RenderTransformOrigin="0.5,0.5">
                            <Ellipse.RenderTransform>
                                <ScaleTransform x:Name="OuterPulseScale" ScaleX="1" ScaleY="1"/>
                            </Ellipse.RenderTransform>
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetName="OuterPulseScale"
                                                           Storyboard.TargetProperty="ScaleX"
                                                           From="0.8" To="1.1"
                                                           Duration="0:0:1.5"
                                                           AutoReverse="True"/>
                                            <DoubleAnimation Storyboard.TargetName="OuterPulseScale"
                                                           Storyboard.TargetProperty="ScaleY"
                                                           From="0.8" To="1.1"
                                                           Duration="0:0:1.5"
                                                           AutoReverse="True"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>

                        <!-- Middle rotating ring -->
                        <Ellipse Width="120" Height="120"
                                Stroke="{StaticResource ForestGreen}"
                                StrokeThickness="6"
                                StrokeDashArray="40,20"
                                Opacity="0.5"
                                RenderTransformOrigin="0.5,0.5">
                            <Ellipse.RenderTransform>
                                <RotateTransform x:Name="MiddleRingRotation" Angle="0"/>
                            </Ellipse.RenderTransform>
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetName="MiddleRingRotation"
                                                           Storyboard.TargetProperty="Angle"
                                                           From="360" To="0"
                                                           Duration="0:0:3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>

                        <!-- Inner fast rotating ring -->
                        <Ellipse Width="90" Height="90"
                                Stroke="{StaticResource ForestGreen}"
                                StrokeThickness="8"
                                StrokeDashArray="60,30"
                                RenderTransformOrigin="0.5,0.5">
                            <Ellipse.RenderTransform>
                                <RotateTransform x:Name="InnerRingRotation" Angle="0"/>
                            </Ellipse.RenderTransform>
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetName="InnerRingRotation"
                                                           Storyboard.TargetProperty="Angle"
                                                           From="0" To="360"
                                                           Duration="0:0:1.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>

                        <!-- Center pulsing dot -->
                        <Ellipse Width="20" Height="20"
                                Fill="{StaticResource ForestGreen}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                RenderTransformOrigin="0.5,0.5">
                            <Ellipse.RenderTransform>
                                <ScaleTransform x:Name="CenterDotScale" ScaleX="1" ScaleY="1"/>
                            </Ellipse.RenderTransform>
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetName="CenterDotScale"
                                                           Storyboard.TargetProperty="ScaleX"
                                                           From="0.6" To="1.4"
                                                           Duration="0:0:0.8"
                                                           AutoReverse="True"/>
                                            <DoubleAnimation Storyboard.TargetName="CenterDotScale"
                                                           Storyboard.TargetProperty="ScaleY"
                                                           From="0.6" To="1.4"
                                                           Duration="0:0:0.8"
                                                           AutoReverse="True"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>
                    </Grid>

                    <!-- Main text with subtle pulse -->
                    <TextBlock Text="Preparing Payment"
                              FontSize="38"
                              FontWeight="SemiBold"
                              FontFamily="{StaticResource BrandFont}"
                              Foreground="{StaticResource DarkBrown}"
                              HorizontalAlignment="Center"
                              RenderTransformOrigin="0.5,0.5">
                        <TextBlock.RenderTransform>
                            <ScaleTransform x:Name="MainTextScale" ScaleX="1" ScaleY="1"/>
                        </TextBlock.RenderTransform>
                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetName="MainTextScale"
                                                       Storyboard.TargetProperty="ScaleX"
                                                       From="1" To="1.03"
                                                       Duration="0:0:1.5"
                                                       AutoReverse="True"/>
                                        <DoubleAnimation Storyboard.TargetName="MainTextScale"
                                                       Storyboard.TargetProperty="ScaleY"
                                                       From="1" To="1.03"
                                                       Duration="0:0:1.5"
                                                       AutoReverse="True"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>

                    <!-- Bouncing dots -->
                    <StackPanel Orientation="Horizontal"
                               HorizontalAlignment="Center"
                               Margin="0,20,0,0">
                        <Ellipse x:Name="Dot1" Width="12" Height="12"
                                Fill="{StaticResource ForestGreen}"
                                Margin="5,0"
                                RenderTransformOrigin="0.5,0.5">
                            <Ellipse.RenderTransform>
                                <TranslateTransform x:Name="Dot1Translate" Y="0"/>
                            </Ellipse.RenderTransform>
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Dot1Translate"
                                                                          Storyboard.TargetProperty="Y">
                                                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                                                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="-15">
                                                    <EasingDoubleKeyFrame.EasingFunction>
                                                        <QuadraticEase EasingMode="EaseOut"/>
                                                    </EasingDoubleKeyFrame.EasingFunction>
                                                </EasingDoubleKeyFrame>
                                                <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="0">
                                                    <EasingDoubleKeyFrame.EasingFunction>
                                                        <BounceEase EasingMode="EaseOut" Bounces="2" Bounciness="3"/>
                                                    </EasingDoubleKeyFrame.EasingFunction>
                                                </EasingDoubleKeyFrame>
                                                <EasingDoubleKeyFrame KeyTime="0:0:1.2" Value="0"/>
                                            </DoubleAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>

                        <Ellipse x:Name="Dot2" Width="12" Height="12"
                                Fill="{StaticResource ForestGreen}"
                                Margin="5,0"
                                RenderTransformOrigin="0.5,0.5">
                            <Ellipse.RenderTransform>
                                <TranslateTransform x:Name="Dot2Translate" Y="0"/>
                            </Ellipse.RenderTransform>
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever" BeginTime="0:0:0.15">
                                            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Dot2Translate"
                                                                          Storyboard.TargetProperty="Y">
                                                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                                                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="-15">
                                                    <EasingDoubleKeyFrame.EasingFunction>
                                                        <QuadraticEase EasingMode="EaseOut"/>
                                                    </EasingDoubleKeyFrame.EasingFunction>
                                                </EasingDoubleKeyFrame>
                                                <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="0">
                                                    <EasingDoubleKeyFrame.EasingFunction>
                                                        <BounceEase EasingMode="EaseOut" Bounces="2" Bounciness="3"/>
                                                    </EasingDoubleKeyFrame.EasingFunction>
                                                </EasingDoubleKeyFrame>
                                                <EasingDoubleKeyFrame KeyTime="0:0:1.2" Value="0"/>
                                            </DoubleAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>

                        <Ellipse x:Name="Dot3" Width="12" Height="12"
                                Fill="{StaticResource ForestGreen}"
                                Margin="5,0"
                                RenderTransformOrigin="0.5,0.5">
                            <Ellipse.RenderTransform>
                                <TranslateTransform x:Name="Dot3Translate" Y="0"/>
                            </Ellipse.RenderTransform>
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever" BeginTime="0:0:0.3">
                                            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Dot3Translate"
                                                                          Storyboard.TargetProperty="Y">
                                                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                                                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="-15">
                                                    <EasingDoubleKeyFrame.EasingFunction>
                                                        <QuadraticEase EasingMode="EaseOut"/>
                                                    </EasingDoubleKeyFrame.EasingFunction>
                                                </EasingDoubleKeyFrame>
                                                <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="0">
                                                    <EasingDoubleKeyFrame.EasingFunction>
                                                        <BounceEase EasingMode="EaseOut" Bounces="2" Bounciness="3"/>
                                                    </EasingDoubleKeyFrame.EasingFunction>
                                                </EasingDoubleKeyFrame>
                                                <EasingDoubleKeyFrame KeyTime="0:0:1.2" Value="0"/>
                                            </DoubleAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>
                    </StackPanel>

                    <!-- Subtitle with fade animation -->
                    <TextBlock Text="Connecting to payment terminal"
                              FontSize="22"
                              Foreground="{StaticResource MediumBrown}"
                              HorizontalAlignment="Center"
                              Margin="0,25,0,0">
                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                       From="0.5" To="1"
                                                       Duration="0:0:1"
                                                       AutoReverse="True"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- Payment WebView -->
            <Border Background="White"
                    Padding="20">
                <Border Background="White"
                        CornerRadius="10"
                        BorderBrush="{StaticResource ForestGreen}"
                        BorderThickness="2">
                    <!-- WebView2 - Full Height -->
                    <wv2:WebView2 x:Name="ForteCheckoutWebView"
                                  Loaded="ForteCheckoutWebView_Loaded"/>
                </Border>
            </Border>
        </Grid>

        <!-- Total and Buttons -->
        <Border Grid.Row="2"
                Background="White"
                BorderBrush="{StaticResource AccentLatte}"
                BorderThickness="0,2,0,0"
                Padding="40,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Total -->
                <StackPanel Grid.Column="0"
                            VerticalAlignment="Center">
                    <TextBlock Text="Total Amount"
                               FontSize="24"
                               Foreground="{StaticResource MediumBrown}"/>
                    <TextBlock Text="{Binding CartTotalPrice, StringFormat={}{0:C}}"
                               FontSize="48"
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBrown}"/>
                </StackPanel>

                <!-- Cancel Button -->
                <Button Grid.Column="1"
                        Content="Cancel"
                        Width="200"
                        Height="80"
                        FontSize="24"
                        FontWeight="SemiBold"
                        Background="{StaticResource SecondaryBrown}"
                        Foreground="White"
                        BorderThickness="0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        Command="{Binding GoBackCommand}"/>

                <!-- Status Message -->
                <TextBlock Grid.Column="2"
                           Text="{Binding PaymentStatusMessage}"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource DarkBrown}"
                           VerticalAlignment="Center"
                           TextWrapping="Wrap"
                           MaxWidth="280"
                           Margin="20,0,0,0"
                           TextAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
