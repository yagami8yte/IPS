<UserControl x:Class="IPS.MainApp.Views.PaymentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             mc:Ignorable="d"
             d:DesignHeight="1920" d:DesignWidth="1080">
    <UserControl.Resources>
        <!-- Button style without hover effects -->
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid Background="{StaticResource BackgroundBeige}">
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Content -->
            <RowDefinition Height="200"/>
            <!-- Total and Buttons -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{StaticResource PrimaryBrown}"
                Padding="40,20">
            <TextBlock Text="Review Your Order"
                       FontSize="48"
                       FontWeight="Bold"
                       FontFamily="{StaticResource BrandFont}"
                       Foreground="White"
                       VerticalAlignment="Center"/>
        </Border>

        <!-- Content: Cart Items or Payment WebView -->
        <Grid Grid.Row="1">
            <!-- Cart Items List (when not in payment mode) -->
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          Margin="40,20"
                          Visibility="{Binding CheckoutHtml, Converter={StaticResource InverseStringToVisibilityConverter}}">
                <ItemsControl ItemsSource="{Binding CartItems}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White"
                                    CornerRadius="15"
                                    Padding="20"
                                    Margin="0,0,0,15"
                                    BorderBrush="{StaticResource AccentLatte}"
                                    BorderThickness="2">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Item Details -->
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding MenuItem.Name}"
                                                   FontSize="24"
                                                   FontWeight="SemiBold"
                                                   FontFamily="{StaticResource BrandFont}"
                                                   Foreground="{StaticResource DarkBrown}"/>
                                        <TextBlock FontSize="18"
                                                   Foreground="{StaticResource MediumBrown}"
                                                   Margin="0,5,0,0">
                                            <Run Text="Options: "/>
                                            <Run Text="{Binding OptionsText, Mode=OneWay}"/>
                                        </TextBlock>
                                        <TextBlock Text="{Binding UnitPrice, StringFormat={}Unit Price: {0:C}}"
                                                   FontSize="18"
                                                   Foreground="{StaticResource MediumBrown}"
                                                   Margin="0,5,0,0"/>
                                    </StackPanel>

                                    <!-- Quantity Controls -->
                                    <StackPanel Grid.Column="1"
                                                Orientation="Horizontal"
                                                VerticalAlignment="Center"
                                                Margin="20,0">
                                        <Button Content="-"
                                                Width="50"
                                                Height="50"
                                                FontSize="24"
                                                FontWeight="Bold"
                                                Background="{StaticResource AccentLatte}"
                                                Foreground="{StaticResource DarkBrown}"
                                                BorderThickness="0"
                                                Command="{Binding DataContext.DecreaseQuantityCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"/>
                                        <TextBlock Text="{Binding Quantity}"
                                                   FontSize="28"
                                                   FontWeight="Bold"
                                                   VerticalAlignment="Center"
                                                   Margin="20,0"
                                                   MinWidth="40"
                                                   TextAlignment="Center"/>
                                        <Button Content="+"
                                                Width="50"
                                                Height="50"
                                                FontSize="24"
                                                FontWeight="Bold"
                                                Background="{StaticResource AccentLatte}"
                                                Foreground="{StaticResource DarkBrown}"
                                                BorderThickness="0"
                                                Command="{Binding DataContext.IncreaseQuantityCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"/>
                                    </StackPanel>

                                    <!-- Price and Remove -->
                                    <StackPanel Grid.Column="2"
                                                VerticalAlignment="Center"
                                                Margin="20,0,0,0">
                                        <TextBlock Text="{Binding TotalPrice, StringFormat={}{0:C}}"
                                                   FontSize="28"
                                                   FontWeight="Bold"
                                                   Foreground="{StaticResource PrimaryBrown}"
                                                   TextAlignment="Right"/>
                                        <Button Content="Remove"
                                                Margin="0,10,0,0"
                                                Padding="15,8"
                                                Background="{StaticResource ErrorRed}"
                                                Foreground="White"
                                                BorderThickness="0"
                                                FontSize="16"
                                                Command="{Binding DataContext.RemoveFromCartCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Payment WebView (when in payment mode) -->
            <Border Background="White"
                    Padding="20"
                    Visibility="{Binding CheckoutHtml, Converter={StaticResource StringToVisibilityConverter}}">
                <Border Background="White"
                        CornerRadius="10"
                        BorderBrush="{StaticResource ForestGreen}"
                        BorderThickness="2">
                    <Grid>
                        <!-- WebView2 - Full Height -->
                        <wv2:WebView2 x:Name="ForteCheckoutWebView"
                                      Loaded="ForteCheckoutWebView_Loaded"/>

                        <!-- Loading Overlay -->
                        <Border Background="#F0FAF7F2"
                                Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel VerticalAlignment="Center"
                                       HorizontalAlignment="Center">
                                <Viewbox Width="80" Height="80" Margin="0,0,0,20">
                                    <Canvas Width="100" Height="100">
                                        <Ellipse Width="100" Height="100"
                                                Stroke="{StaticResource ForestGreen}"
                                                StrokeThickness="8"
                                                StrokeDashArray="70,30"
                                                Opacity="0.3"/>
                                        <Ellipse Width="100" Height="100"
                                                Stroke="{StaticResource ForestGreen}"
                                                StrokeThickness="8"
                                                StrokeDashArray="70,30"
                                                RenderTransformOrigin="0.5,0.5">
                                            <Ellipse.RenderTransform>
                                                <RotateTransform x:Name="SpinnerRotation" Angle="0"/>
                                            </Ellipse.RenderTransform>
                                            <Ellipse.Triggers>
                                                <EventTrigger RoutedEvent="Loaded">
                                                    <BeginStoryboard>
                                                        <Storyboard RepeatBehavior="Forever">
                                                            <DoubleAnimation Storyboard.TargetName="SpinnerRotation"
                                                                           Storyboard.TargetProperty="Angle"
                                                                           From="0"
                                                                           To="360"
                                                                           Duration="0:0:1.5"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger>
                                            </Ellipse.Triggers>
                                        </Ellipse>
                                    </Canvas>
                                </Viewbox>
                                <TextBlock Text="Preparing Payment..."
                                          FontSize="28"
                                          FontWeight="SemiBold"
                                          Foreground="{StaticResource DarkBrown}"
                                          HorizontalAlignment="Center"/>
                                <TextBlock Text="Please wait a moment"
                                          FontSize="18"
                                          Foreground="{StaticResource MediumBrown}"
                                          HorizontalAlignment="Center"
                                          Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </Border>
        </Grid>

        <!-- Total and Buttons -->
        <Border Grid.Row="2"
                Background="White"
                BorderBrush="{StaticResource AccentLatte}"
                BorderThickness="0,2,0,0"
                Padding="40,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Total -->
                <StackPanel Grid.Column="0"
                            VerticalAlignment="Center">
                    <TextBlock Text="Total Amount"
                               FontSize="24"
                               Foreground="{StaticResource MediumBrown}"/>
                    <TextBlock Text="{Binding CartTotalPrice, StringFormat={}{0:C}}"
                               FontSize="48"
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBrown}"/>
                </StackPanel>

                <!-- Go Back Button -->
                <Button Grid.Column="1"
                        Content="â† Go Back"
                        Width="200"
                        Height="80"
                        FontSize="24"
                        FontWeight="SemiBold"
                        Background="{StaticResource SecondaryBrown}"
                        Foreground="White"
                        BorderThickness="0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        Margin="0,0,20,0"
                        Command="{Binding GoBackCommand}"/>

                <!-- Go to Payment / Process Order Button -->
                <Button Grid.Column="2"
                        Width="280"
                        Height="80"
                        FontSize="24"
                        FontWeight="SemiBold"
                        Background="{StaticResource ForestGreen}"
                        Foreground="White"
                        BorderThickness="0"
                        VerticalAlignment="Center"
                        Command="{Binding PayCommand}"
                        Visibility="{Binding CheckoutHtml, Converter={StaticResource InverseStringToVisibilityConverter}}">
                    <TextBlock TextAlignment="Center">
                        <Run Text="ðŸ’³"/><LineBreak/>
                        <Run Text="{Binding IsPaymentEnabled, Mode=OneWay, Converter={StaticResource BoolToPaymentTextConverter}, FallbackValue='Process Order'}"/>
                    </TextBlock>
                </Button>

                <!-- Status Message (when in payment mode) -->
                <TextBlock Grid.Column="2"
                           Text="{Binding PaymentStatusMessage}"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource DarkBrown}"
                           VerticalAlignment="Center"
                           TextWrapping="Wrap"
                           MaxWidth="280"
                           TextAlignment="Center"
                           Visibility="{Binding CheckoutHtml, Converter={StaticResource StringToVisibilityConverter}}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
