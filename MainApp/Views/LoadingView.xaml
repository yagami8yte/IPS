<UserControl x:Class="IPS.MainApp.Views.LoadingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="1920" d:DesignWidth="1080">
    <Grid Background="#1A1A1A">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Logo/Branding Section -->
        <StackPanel Grid.Row="1"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="0,0,0,100">

            <!-- Application Title -->
            <TextBlock Text="IPS"
                      FontSize="120"
                      FontWeight="Bold"
                      Foreground="#D4AF37"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,20"/>

            <TextBlock Text="Integrated POS Solution"
                      FontSize="36"
                      Foreground="#CCCCCC"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,80"/>

            <!-- Loading Animation -->
            <Viewbox Width="120" Height="120" Margin="0,0,0,40">
                <Canvas Width="100" Height="100">
                    <Ellipse Width="100" Height="100"
                            Stroke="#D4AF37"
                            StrokeThickness="8"
                            StrokeDashArray="75,25"
                            RenderTransformOrigin="0.5,0.5">
                        <Ellipse.RenderTransform>
                            <RotateTransform x:Name="LoadingRotation" Angle="0"/>
                        </Ellipse.RenderTransform>
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetName="LoadingRotation"
                                                       Storyboard.TargetProperty="Angle"
                                                       From="0" To="360"
                                                       Duration="0:0:1.5"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>
                </Canvas>
            </Viewbox>

            <!-- Status Message -->
            <TextBlock Text="{Binding StatusMessage}"
                      FontSize="32"
                      Foreground="#FFFFFF"
                      HorizontalAlignment="Center"
                      TextAlignment="Center"
                      Margin="0,0,0,20"/>

            <!-- Progress Bar -->
            <ProgressBar Value="{Binding Progress}"
                        Maximum="100"
                        Width="600"
                        Height="12"
                        Foreground="#D4AF37"
                        Background="#333333"
                        BorderThickness="0"
                        Margin="0,20,0,0"/>

            <TextBlock Text="{Binding Progress, StringFormat={}{0}%}"
                      FontSize="24"
                      Foreground="#AAAAAA"
                      HorizontalAlignment="Center"
                      Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
