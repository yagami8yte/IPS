<UserControl x:Class="IPS.MainApp.Views.BreakTimeView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:vm="clr-namespace:IPS.MainApp.ViewModels"
      mc:Ignorable="d"
      d:DataContext="{d:DesignInstance vm:BreakTimeViewModel}"
      d:DesignHeight="1920" d:DesignWidth="1080"
      Width="1080" Height="1920">

    <Grid>
        <!-- COFFEEBOTIC unified background -->
        <Grid.Background>
            <SolidColorBrush Color="#F0E4CC"/>
        </Grid.Background>

        <!-- Main Content -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="180"/>
                <!-- Brand Header -->
                <RowDefinition Height="*"/>
                <!-- Content -->
            </Grid.RowDefinitions>

            <!-- Brand Logo at Top -->
            <Border Grid.Row="0"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    BorderThickness="0">
                <Grid>
                    <!-- COFFEEBOTIC Logo - Left Side -->
                    <Image Source="pack://application:,,,/Assets/Branding/coffeebotic.jpg"
                           Height="140"
                           Margin="40,20,0,20"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Stretch="Uniform"
                           RenderOptions.BitmapScalingMode="HighQuality"/>

                    <!-- Date and Time Display - Right Side -->
                    <StackPanel HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="0,0,180,0">
                        <TextBlock Text="{Binding CurrentDate}"
                                   FontSize="32"
                                   FontWeight="SemiBold"
                                   FontFamily="{StaticResource BrandFont}"
                                   Foreground="{StaticResource Espresso}"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding CurrentTime}"
                                   FontSize="48"
                                   FontWeight="Bold"
                                   FontFamily="{StaticResource BrandFont}"
                                   Foreground="{StaticResource MetallicGold}"
                                   HorizontalAlignment="Right"/>
                    </StackPanel>

                    <!-- Admin Button (Top-Right) -->
                    <Button Command="{Binding OpenAdminCommand}"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,40,0"
                            Width="120"
                            Height="120"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Opacity="0.6">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="15">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Opacity" Value="1.0"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <!-- Gear/Settings Icon -->
                        <Viewbox Width="70" Height="70">
                            <Canvas Width="24" Height="24">
                                <!-- Settings gear icon path -->
                                <Path Fill="{StaticResource AccentGold}"
                                      Data="M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.34 19.43,11L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.96 19.05,5.05L16.56,6.05C16.04,5.66 15.5,5.32 14.87,5.07L14.5,2.42C14.46,2.18 14.25,2 14,2H10C9.75,2 9.54,2.18 9.5,2.42L9.13,5.07C8.5,5.32 7.96,5.66 7.44,6.05L4.95,5.05C4.73,4.96 4.46,5.05 4.34,5.27L2.34,8.73C2.21,8.95 2.27,9.22 2.46,9.37L4.57,11C4.53,11.34 4.5,11.67 4.5,12C4.5,12.33 4.53,12.65 4.57,12.97L2.46,14.63C2.27,14.78 2.21,15.05 2.34,15.27L4.34,18.73C4.46,18.95 4.73,19.03 4.95,18.95L7.44,17.94C7.96,18.34 8.5,18.68 9.13,18.93L9.5,21.58C9.54,21.82 9.75,22 10,22H14C14.25,22 14.46,21.82 14.5,21.58L14.87,18.93C15.5,18.67 16.04,18.34 16.56,17.94L19.05,18.95C19.27,19.03 19.54,18.95 19.66,18.73L21.66,15.27C21.78,15.05 21.73,14.78 21.54,14.63L19.43,12.97Z"/>
                            </Canvas>
                        </Viewbox>
                    </Button>
                </Grid>
            </Border>

            <!-- Break Time Content -->
            <Grid Grid.Row="1">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="80">
                    <!-- Coffee Cup Icon -->
                    <Viewbox Width="280" Height="280" Margin="0,0,0,60">
                        <Canvas Width="24" Height="24">
                            <!-- Coffee cup icon path -->
                            <Path Fill="{StaticResource MetallicGold}"
                                  Data="M2,21H20V19H2M20,8H18V5H20M20,3H4V13A4,4 0 0,0 8,17H14A4,4 0 0,0 18,13V10H20A2,2 0 0,0 22,8V5C22,3.89 21.1,3 20,3Z"/>
                        </Canvas>
                    </Viewbox>

                    <!-- Break Time Title -->
                    <TextBlock Text="ON BREAK"
                               FontSize="88"
                               FontWeight="Bold"
                               FontFamily="{StaticResource BrandFont}"
                               Foreground="{StaticResource Espresso}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,40">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#D4AF37"
                                            Direction="270"
                                            ShadowDepth="4"
                                            Opacity="0.4"
                                            BlurRadius="10"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <!-- Custom Message or Default Message -->
                    <Border Visibility="{Binding HasCustomMessage, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Background="{StaticResource SageGreen}"
                            CornerRadius="20"
                            Padding="50,40"
                            Margin="0,0,0,50">
                        <TextBlock Text="{Binding BreakMessage}"
                                   FontSize="48"
                                   FontWeight="SemiBold"
                                   FontFamily="{StaticResource BrandFont}"
                                   Foreground="White"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   LineHeight="60"/>
                    </Border>

                    <!-- Default Messages -->
                    <StackPanel Visibility="{Binding HasCustomMessage, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                        <TextBlock Text="We're taking a short break"
                                   FontSize="52"
                                   FontWeight="SemiBold"
                                   FontFamily="{StaticResource BrandFont}"
                                   Foreground="{StaticResource ForestGreen}"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,30"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"/>

                        <!-- Scheduled Break - Show End Time -->
                        <TextBlock Visibility="{Binding ShowScheduledEndTime, Converter={StaticResource BooleanToVisibilityConverter}}"
                                   FontSize="46"
                                   FontFamily="{StaticResource BrandFont}"
                                   Foreground="{StaticResource Espresso}"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"
                                   Margin="0,0,0,50">
                            <Run Text="We'll be back at "/>
                            <Run Text="{Binding BreakEndTime}" FontWeight="Bold" Foreground="{StaticResource MetallicGold}"/>
                        </TextBlock>

                        <!-- Instant Break - Show Generic Message -->
                        <TextBlock Visibility="{Binding IsInstantBreak, Converter={StaticResource BooleanToVisibilityConverter}}"
                                   Text="We'll be back shortly"
                                   FontSize="46"
                                   FontFamily="{StaticResource BrandFont}"
                                   Foreground="{StaticResource Espresso}"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"
                                   Margin="0,0,0,50"/>
                    </StackPanel>

                    <!-- Additional Info -->
                    <Border Background="{StaticResource Latte}"
                            CornerRadius="15"
                            Padding="40,30"
                            BorderBrush="{StaticResource MetallicGold}"
                            BorderThickness="2">
                        <TextBlock Text="Thank you for your patience"
                                   FontSize="40"
                                   FontFamily="{StaticResource BrandFont}"
                                   Foreground="{StaticResource Espresso}"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
