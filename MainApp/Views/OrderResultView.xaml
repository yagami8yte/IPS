<UserControl x:Class="IPS.MainApp.Views.OrderResultView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="1920" d:DesignWidth="1080">
    <Grid Background="{StaticResource BackgroundBeige}">
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    MaxWidth="800">
            <!-- Success/Failure Icon -->
            <Border Width="200"
                    Height="200"
                    CornerRadius="100"
                    Margin="0,0,0,40">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="{StaticResource AccentGreen}"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsSuccess}" Value="False">
                                <Setter Property="Background" Value="{StaticResource ErrorRed}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <TextBlock FontSize="120"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Text" Value="✓"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsSuccess}" Value="False">
                                    <Setter Property="Text" Value="✗"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Border>

            <!-- Title -->
            <TextBlock FontSize="64"
                       FontWeight="Bold"
                       FontFamily="{StaticResource BrandFont}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Text" Value="Order Placed!"/>
                        <Setter Property="Foreground" Value="{StaticResource AccentGreen}"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsSuccess}" Value="False">
                                <Setter Property="Text" Value="Order Failed"/>
                                <Setter Property="Foreground" Value="{StaticResource ErrorRed}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <!-- Order Label (only show on success) -->
            <Border Padding="20"
                    Margin="0,0,0,20">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsSuccess}" Value="False">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <StackPanel>
                    <TextBlock Text="Your Order Number"
                               FontSize="28"
                               Foreground="{StaticResource MediumBrown}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="{Binding OrderLabel}"
                               FontSize="72"
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBrown}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Message -->
            <TextBlock Text="{Binding Message}"
                       FontSize="32"
                       Foreground="{StaticResource DarkBrown}"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="40,0,40,40"/>

            <!-- Done Button -->
            <Button Content="Done"
                    Width="300"
                    Height="80"
                    FontSize="28"
                    FontWeight="Bold"
                    Background="{StaticResource PrimaryBrown}"
                    Foreground="White"
                    BorderThickness="0"
                    Command="{Binding DoneCommand}">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
